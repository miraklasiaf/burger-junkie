{
    "extends": [
        "standard",
        "standard-react",
        "plugin:jsx-a11y/recommended"
    ],
    "parser": "babel-eslint",
    "globals": {
        "describe": true,
        "it": true,
        "fetch": true
    },
    "plugins": [
        "react-hooks"
    ],
    "rules": {
        "import/first": "off",
        "import/export": "off",
        "function-paren-newline": [
            "error",
            "consistent"
        ],
        "no-console": "error",
        "react/jsx-curly-brace-presence": [
            "error",
            "never"
        ],
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    },
    "env": {
        "jest": true
    }
}